# Server Configuration
NODE_ENV=production
PORT=4000
SOCKET_PORT=4001
IP_ADDRESS=0.0.0.0

# URLs
BACKEND_URL=https://your-backend-domain.com
FONTEND_URL=https://your-frontend-domain.com
ALLOWED_ORIGINS=https://your-frontend-domain.com

# Database
DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/fernando?retryWrites=true&w=majority

# JWT Secrets
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRE_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-key-here
JWT_REFRESH_EXPIRE_IN=365d
JWT_SIGNUP_SECRET=your-signup-secret-key-here
JWT_RESET_PASSWORD_SECRET=your-reset-password-secret-key-here

# Bcrypt
BCRYPT_SALT_ROUNDS=12

# Email Configuration
EMAIL_HEADER_NAME=Fernando
EMAIL_FROM=noreply@yourdomain.com
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587

# Session
EXPRESS_SESSION_SECRET_KEY=your-session-secret-key

# Social Auth (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=

# Twilio (Optional)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Stripe
STRIPE_SECRET_KEY=sk_live_your-stripe-key
STRIPE_PAYMENT_SUCCESS_URL=https://your-frontend-domain.com/payment/success

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET_NAME=your-bucket-name

# IVS Configuration (if using AWS IVS for streaming)
AWS_IVS_CHANNEL_ARN=

# Reset Token
RESET_TOKEN_EXPIRE_TIME=3600000

# Redis (if using)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
